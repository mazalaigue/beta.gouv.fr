# See more at http://EditorConfig.org

# This is the topmost editorconfig file.
root = true

[**/*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 9999
trim_trailing_whitespace = true

[{*.yml,Gemfile,Gemfile.lock}]
indent_size = 2
indent_style = space

[rb/**/*]
indent_size = 2
indent_style = space

[**/*.js]
indent_size = 2
indent_style = space
insert_final_newline = none

[Gemfile.lock]
indent_size = none
